<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="cabinet_meeting_form_view">
        <field name="name">files.activity.wizard.form.view</field>
        <field name="model">files.activity.wizard</field>
        <field name="arch" type="xml">
            <form string="Schedule Activity">
                <group>
                    <group>
                        <field name="activity_type_id"/>
                        <field name="summary"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                        <field name="assigned_to_id"/>
                    </group>
                </group>
                <footer>
                    <button string="Create Activity" type="object" name="create_activity" class="oe_highlight"/>
                    <button string="Cancel" class="oe_link" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>