<odoo>
    <!-- Corrected structure and references -->
    <record id="freezoner_account_opened_mail_template" model="mail.template">
        <field name="name">Account Opened</field>
        <field name="model_id" ref="model_task_wizard"/>
        <field name="model">task.wizard</field>
        <field name="subject">Account Opened</field>
        <field name="auto_delete" eval="False"/>
        <field name="email_from">{{ object.task_id.company_id.email }}</field>
        <field name="email_to">{{ object.task_id.partner_id.email }}</field>
    </record>

