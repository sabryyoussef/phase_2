<odoo>
    <!-- Unique Group Definitions -->
    <record id="group_confirm_proforma_invoice_sales" model="res.groups">
        <field name="name">Confirm Proforma Invoice</field>
        <field name="category_id" ref="base.module_category_sales_management"/>
    </record>

    <record id="group_template_project_button" model="res.groups">
        <field name="name">Project Template Button</field>
        <field name="category_id" ref="base.module_category_project_management"/>
    </record>

    <record id="group_hr_expense" model="res.groups">
        <field name="name">Expense Group</field>
        <field name="category_id" ref="base.module_category_hr_expense"/>
    </record>

    <record id="group_project_done_button" model="res.groups">
        <field name="name">Project Done Button</field>
        <field name="category_id" ref="base.module_category_project_management"/>
    </record>

    <record id="group_task_done_button" model="res.groups">
        <field name="name">Task Done Button Group</field>
        <field name="category_id" ref="base.module_category_project_management"/>
    </record>

    <record id="group_proforma_sov_price" model="res.groups">
        <field name="name">Proforma Invoice Sov Price Access</field>
        <field name="category_id" ref="base.module_category_accounting"/>
    </record>

    <!-- Record Rule -->
    <record id="rule_project_see_only_own_tasks" model="ir.rule">
        <field name="name">User: See Own Only Tasks</field>
        <field name="model_id" ref="project.model_project_task"/>
        <field name="domain_force">[('user_ids', 'in', [user.id])]</field>
        <field name="groups" eval="[(4, ref('project.group_project_user'))]"/>
    </record>
</odoo>
