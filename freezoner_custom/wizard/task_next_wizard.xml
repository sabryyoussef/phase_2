<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="task_next_wizard_form_view">
        <field name="name">task.next.wizard.form.view</field>
        <field name="model">task.next.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet string="">
                    <group>
                        <group string="Add Comment">
                            <field name="comment"/>
                            <field name="task_id" invisible="1"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="submit" string="Next" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>