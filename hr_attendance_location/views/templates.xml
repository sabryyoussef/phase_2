<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_location" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.hr.attendance.location</field>
        <field name="model">res.config.settings</field>
        <field name="priority" eval="82" />
        <field name="inherit_id" ref="base.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//form" position="inside">
                <div class="app_settings_block" data-string="Attendances Location"
                    string="Attendances Location" data-key="hr_attendance_location">
                    <h2>Company Location</h2>
                    <div class="row mt16 o_settings_container">
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="company_latitude" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="company_latitude" string="Company Latitude" />
                                <div class="text-muted">Define accurate company location by setting
                                    latitude and longitude from maps.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="company_longitude" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="company_longitude" string="Company Longitude" />
                                <div class="text-muted">Define accurate company location by setting
                                    latitude and longitude from maps.</div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-6 o_setting_box">
                            <div class="o_setting_left_pane">
                                <field name="allowed_distance" />
                            </div>
                            <div class="o_setting_right_pane">
                                <label for="allowed_distance" string="Allowed Distance" />
                                <div class="text-muted">Define the allowed distance from the company
                                    location in meters.</div>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>