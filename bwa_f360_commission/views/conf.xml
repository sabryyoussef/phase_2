<odoo>
    <record id="res_config_settings_sale_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@name='invoicing_setting_container']" position="inside">
                <setting id="commission_settings" string="Commission Settings">
                    <div class="content-group">
                        <div class="row mt16">
                            <label for="commission_perc" string="Commission Percentage"
                                class="col-lg-3 o_light_label" />
                            <field name="commission_perc" class="col-lg-3" />
                        </div>
                        <div class="row mt16">
                            <label for="product_id" string="Commission Product"
                                class="col-lg-3 o_light_label" />
                            <field name="product_id" class="col-lg-3" />
                        </div>
                        <div class="row mt16">
                            <label for="journal_id" string="Commission Journal"
                                class="col-lg-3 o_light_label" />
                            <field name="journal_id" class="col-lg-3" />
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>