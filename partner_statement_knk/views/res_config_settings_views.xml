<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.currency.rate.live</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="account.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//block[@id='invoicing_settings']" position="inside">
                <setting string="Partner Statements"
                    help="Configure the automatic sending of partner statements.">
                    <div class="content-group">
                        <div class="row mt16">
                            <label string="Interval" for="statement_interval_unit"
                                class="col-lg-3 o_light_label" />
                            <field name="statement_interval_unit" />
                        </div>
                        <div class="row mt16">
                            <label string="Next Run" for="statement_next_execution_date"
                                class="col-lg-3 o_light_label" />
                            <field name="statement_next_execution_date" />
                        </div>
                    </div>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>