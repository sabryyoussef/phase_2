<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="crm_wizard_form_view">
            <field name="name">crm.wizard.form.view</field>
            <field name="model">crm.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <sheet string="Refused">
                        <group>
                            <group string="Choose Stage">
                                <field name="current_stage_id" />
                                <field name="move_to_stage_id" />
                                <field name="crm_id" invisible="1" />
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="submit" string="Move" type="object" default_focus="1" class="oe_highlight"/>
                        <button string="Cancel" class="btn btn-default" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
</odoo>