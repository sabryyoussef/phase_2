<odoo>
    <record id="partner_custom" model="ir.ui.view">
        <field name="name">res.partner.form.custom</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <header>
                    <button name="action_new" type="object" string="New" class="oe_highlight"
                        modifiers="{'invisible': ['|',('is_appear_buttons', '=', False),('stage_id', 'not in', [2,3])]}" />
                    <button name="action_verified" type="object" string="Verified"
                        class="btn btn-success"
                        modifiers="{'invisible': ['|',('is_appear_buttons', '=', False),('stage_id', '!=', 1)]}" />
                    <button name="action_liquidated_struck_off" type="object"
                        string="Liquidated Struck-off"
                        class="btn btn-warning"
                        modifiers="{'invisible': ['|',('is_appear_buttons', '=', False),('stage_id', '!=', 2)]}" />
                    <field name="stage_id" widget="statusbar" class="o_field_statusbar" />
                </header>
            </xpath>
            <xpath expr="//field[@name='phone']" position="replace">
                <field name="is_appear_buttons" invisible="1" />
                <field name="phone" widget="phone"
                    modifiers="{'required': [('company_type', '=','company')]}" />
            </xpath>
            <xpath expr="//field[@name='email']" position="replace">
                <field name="email" widget="email" context="{'gravatar_image': True}" required="1" />
            </xpath>
            <xpath expr="//field[@name='vat']" position="after">
                <field name="license_authority_id"
                    modifiers="{'invisible': [('company_type', '!=','company')],'required': [('company_type', '=','company')]}" />
                <field name="foreign_jurisdiction_id"
                    modifiers="{'invisible': [('license_authority_id', '!=',81)],'required': [('license_authority_id', '=', 81)]}" />
                <field name="license_activity_ids" widget="many2many_tags" invisible="1" />
                <field name="incorporation_date"
                    modifiers="{'invisible': [('company_type', '!=','company')],'required': [('company_type', '=','company')]}" />
                <field name="license_validity"
                    modifiers="{'invisible': [('company_type', '!=','company')]}" />
                <label for="license_validity_from" string="License Validity"
                    modifiers="{'invisible': [('company_type', '!=','company')]}" />
                <div name="corporate_tax_period" class="o_row"
                    modifiers="{'invisible': [('company_type', '!=','company')]}">
                    <field name="license_validity_from" widget="daterange"
                        options="{'related_end_date': 'license_validity_to'}"
                        modifiers="{'invisible': [('company_type', '!=','company')]}" />
                    <i class="fa fa-long-arrow-right mx-2 oe_edit_only" aria-label="Arrow icon"
                        title="Arrow" />
                    <field name="license_validity_to" widget="daterange"
                        options="{'related_start_date': 'license_validity_from'}"
                        modifiers="{'invisible': [('company_type', '!=','company')]}" />
                </div>
                <field name="source_id"
                    modifiers="{'invisible': [('company_type', '!=','company')]}" />
                <field name="license_number"
                    modifiers="{'invisible': [('company_type', '!=','company')]}" />
                <field name="legal_form_id"
                    modifiers="{'invisible': [('company_type', '!=','company')]}" invisible="1" />
                <field name="source_wealth"
                    modifiers="{'invisible': [('company_type', '!=','company')]}" />
                <field name="status" modifiers="{'invisible': [('company_type', '!=','company')]}" />
                <field name="shareholder" />
                <field name="gender"
                    modifiers="{'invisible': [('company_type', '!=','person')],'required': [('company_type', '=','person')]}" />
                <field name="relationship"
                    modifiers="{'invisible': [('company_type', '!=','person')]}" />
                <field name="ubo" modifiers="{'invisible': [('company_type', '!=','person')]}" />
            </xpath>
            <xpath expr="//page[@name='internal_notes']" position="after">
                <page string="Shareholder">
                    <field name="shareholder_ids">
                        <list editable="bottom">
                            <field name="name" />
                            <field name="position" />
                            <field name="shares" />
                            <field name="total" />
                        </list>
                    </field>
                </page>
            </xpath>
            <xpath expr="//group" position="after">
                <group name="documents">
                    <group name="secondary_documents" string="" />
                    <group name="main_documents" string="Main Documents">
                        <field name="residency" widget="boolean_toggle"
                            modifiers="{'invisible': [('company_type', '!=','person')]}" />
                        <field name="emirates_no_id"
                            domain="[('partner_id', '!=', False), ('partner_id', '=', id)]"
                            modifiers="{'invisible': ['|',('residency', '!=',True),('company_type', '!=','person')]}" />
                        <field name="residence_visa_id"
                            domain="[('partner_id','!=', False),('partner_id','=', id)]"
                            modifiers="{'invisible': ['|',('residency', '!=',True),('company_type', '!=','person')]}" />
                        <field name="trade_license_id"
                            domain="[('partner_id','!=', False),('partner_id','=', id)]"
                            modifiers="{'invisible': [('company_type', '!=','company')]}" />
                        <field name="memorandum_articles_id"
                            domain="[('partner_id','!=', False),('partner_id','=', id)]"
                            modifiers="{'invisible': [('company_type', '!=','company')]}" />
                    </group>
                </group>
            </xpath>
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="all_license_activity_ids" widget="many2many_tags" invisible="1" />
            </xpath>
        </field>
    </record>

    <record id="res_partner_stages_kanban_search" model="ir.ui.view">
        <field name="name">res.partner.stages.search</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//search" position="inside">
                <field name="stage_id" widget="many2one" options="{'no_create': True}" />
                <filter name="partner_stage" string="Stage" domain="[]"
                    context="{'group_by': 'stage_id'}" />
            </xpath>
        </field>
    </record>

    <!-- Custom action that extends the base contacts action -->
    <record id="action_contacts_with_stages" model="ir.actions.act_window">
        <field name="name">Contacts</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="context">{'search_default_partner_stage': 1}</field>
        <field name="search_view_id" ref="base.view_res_partner_filter" />
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new contact
            </p>
        </field>
    </record>

    <!-- Update the contacts menu to use our custom action -->
    <record id="contacts.menu_contacts" model="ir.ui.menu">
        <field name="action" ref="action_contacts_with_stages" />
    </record>
    <menuitem
        id="menu_contacts_with_stages"
        name="Staged Contacts"
        parent="contacts.res_partner_menu_contacts"
        action="action_contacts_with_stages"
        sequence="1" />

    <record id="view_res_partner_filter_stages" model="ir.ui.view">
        <field name="name">res.partner.search.stages</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_res_partner_filter" />
        <field name="arch" type="xml">
            <xpath expr="//group" position="inside">
                <filter string="Stage" name="partner_stage" context="{'group_by': 'stage_id'}" />
            </xpath>
        </field>
    </record>
</odoo>