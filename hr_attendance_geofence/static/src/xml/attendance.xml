<odoo>
    <template id="MapToggleTemplate" name="Map Toggle Template" t-name="hr_attendance_geofence.MapToggleTemplate">
        <div t-if="widget.employee" class="gmap_kisok_container mb8" id="gmap_kisok" style="display: none;">
            <i class="fa fa-1x fa-angle-double-down gmap_kisok_toggle"
               role="button"
               t-on-click="toggleMap"
               id="gmap_kisok_toggle">
                Map Location
            </i>
            <div class="gmap_kisok_view" t-if="showMap" style="display: none;"></div>
        </div>
    </template>
</odoo>
